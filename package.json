{
	"name": "chat-ui",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"prettier": "prettier --plugin-search-dir . --write .",
		"preview": "vite preview",
		"stories": "histoire dev",
		"stories:build": "histoire build",
		"stories:preview": "histoire preview",
		"test": "npm run test:integration-cli && npm run test:unit-cli",
		"test:integration": "playwright test --ui",
		"test:integration-cli": "playwright test",
		"test:unit": "vitest --ui",
		"test:unit-cli": "vitest run"
	},
	"devDependencies": {
		"@histoire/plugin-svelte": "^0.17.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/svelte": "^4.0.4",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/ui": "^0.34.6",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"histoire": "^0.17.2",
		"jsdom": "^22.1.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.11",
		"vitest": "^0.32.2"
	}
}